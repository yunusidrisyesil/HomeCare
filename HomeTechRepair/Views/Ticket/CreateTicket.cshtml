@model TicketViewModel

@{
    ViewBag.Title = "Create Support Ticket";
}

<!-- Page Content -->
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Support Ticket</h3>
                            </div>
                            <form asp-action="CreateTicket" asp-controller="Ticket"> 
                                <div class="form-group form-focus">
                                    <input asp-for="Description" class="form-control floating">
                                    <label asp-for="Description" class="focus-label"></label>
                                    <span asp-validation-for="Description"></span>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Send a Ticket</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Content -->
