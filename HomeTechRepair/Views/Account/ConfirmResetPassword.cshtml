@model ResetPasswordViewModel
    @{
        ViewBag.Title = "Forgot Password";
    }

        <div class="container">
          
            <form asp-controller="Account" asp-action="ConfirmResetPassword" method="post">
                <input type="hidden" value="@ViewBag.UserId" id="UserId" name="UserId" />
                <input type="hidden" value="@ViewBag.Code" id="Code" name="Code" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="billing-details">
                            <h3 class="title">Update Password</h3>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="NewPassword"></label>
                                        <input asp-for="NewPassword" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="ConfirmNewPassword"></label>
                                        <input asp-for="ConfirmNewPassword" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="payment-box mt-30">
                                        <input type="submit" class="main-btn" value="Change Password" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
