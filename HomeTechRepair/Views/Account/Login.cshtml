@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<!-- Page Content -->
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">

                <!-- Login Tab Content -->
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/assets/img/login-banner.png" class="img-fluid" alt="Doccure Login">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Login <span>Doccure</span></h3>
                            </div>
                            <form asp-action="Login" asp-controller="Account">
                                <div class="form-group form-focus">
                                    <input asp-for="Email" class="form-control floating">
                                    <label asp-for="Email" class="focus-label"></label>
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="Password" class="form-control floating">
                                    <label asp-for="Password" class="focus-label"></label>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div>
                                    <ejs-textbox id="validation" placeholder="Enter Value" cssClass="e-error" floatLabelType="Never"></ejs-textbox>
                                </div>
                                <div class="text-right">
                                    <a class="forgot-link" href="forgot-password.html">Forgot Password ?</a>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Login</button>
                                <div class="text-center dont-have">Don’t have an account? <a asp-action="Register" asp-controller="Account">Register</a></div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /Login Tab Content -->
            </div>
        </div>
    </div>
</div>
<!-- /Page Content -->