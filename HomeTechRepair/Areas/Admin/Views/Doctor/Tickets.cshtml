
<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid">

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="account-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-8">
                                    <div id="dxGrid"></div>
                                    <a class="fancybox-button" id="Invoice" hidden></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Wrapper -->
</div>

@section Scripts
{
    <script src="~/vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>

    <script>
        var dataGrid = null;
        $(() => {
            var url = '../../../api/DoctorsTicketApi';
            dataGrid = $("#dxGrid").dxDataGrid({
                remoteOperations: { paging: true, filtering: true, sorting: true, grouping: true, summary: true, groupPaging: true },
                dataSource: DevExpress.data.AspNet.createStore({
                    key: 'id',
                    loadUrl: `${url}/get`,
                    onBeforeSend(method, ajaxOptions) {
                        ajaxOptions.xhrFields = { withCredentials: true };
                        console.log(method);
                        console.log(ajaxOptions);
                    }
                }),
                editing: {
                    mode: 'form',
                    allowUpdating: true,
                },
                allowColumnResizing: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                hoverStateEnabled: true,
                showBorders: true,
                searchPanel: {
                    visible: true,
                    width: 240,
                    placeholder: "Search..."
                },
                filterRow: {
                    visible: true,
                    applyFilter: "auto"
                },
                headerFilter: {
                    visible: true
                },
                export: {
                    enabled: true,
                    fileName: `Tickets_${parseInt(Math.random() * 1000000000)}`,
                    allowExportSelectedData: true
                },
                paging: {
                    pageSize: 20
                },
                pager: {
                    showPageSizeSelector: true,
                    allowedPageSizes: [5, 15, 30, 45],
                    showInfo: true
                },
                selection: {
                    mode: "multiple"
                },
                columns: [
                    {
                        caption: 'id',
                        dataField: "id",
                        visible: false,
                        allowFiltering: false,
                        formItem: { visible: false }
                    },
                    {
                        caption: 'Patient',
                        dataField: "patient",
                        allowEditing: false,
                    },
                    {
                        dataField: "createdDate",
                        caption: "Created Date",
                        dataType: "datetime",
                        format: 'dd/MM/yyyy HH:mm',
                        allowEditing: false,
                    },
                    {
                        dataField: "appointmentDate",
                        caption: "Appointment Date",
                        dataType: "datetime",
                        format: 'dd/MM/yyyy HH:mm',
                        allowEditing: false,
                    },
                    {
                        dataField: "resolutionDate",
                        caption: "Resolution Date",
                        dataType: "datetime",
                        format: 'dd/MM/yyyy HH:mm',

                    },
                    {
                        caption: 'Description',
                        dataField: "description",
                        editorType: 'dxTextArea',
                        colSpan: 2,
                        editorOptions: {
                            height: 100,
                        },
                    }
                ],
                onSelectionChanged(selectedItems) {
                    const data = selectedItems.selectedRowsData[0];
                    if (data) {
                        $('#Invoice').dxButton({
                            stylingMode: 'contained',
                            text: 'Invoice',
                            type: 'success',
                            width: 120,
                            onClick() {
                                console.log(data.id)
                                window.location.href = '/admin/doctor/concludeticket/' + data.id;
                            },
                        });
                    }
                },

            }).dxDataGrid("instance");
        });
    </script>

}
