@section Scripts
{
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script>

            var options = {
                chart: {
                    height: 350,
                    type: 'line',
                    stacked: false
                },
                dataLabels: {
                    enabled: false
                },
                series: [

                ],
                title: {
                    text: 'Income',
                },
                noData: {
                    text: 'Loading...'
                }
            }

            var chart = new ApexCharts(
                document.querySelector("#chart"),
                options
            );

            chart.render();
            var url = '../../../api/reportapi/MonthlyIncome';
            $.getJSON(url, function (response) {
                chart.updateSeries([{
                    name: '',
                    data: response
                }])
            });

            $(document).ready(function(){
            $("#LastMonth").click(function(){
                $.ajax({url: '../../../api/reportapi/LastMonthDaily', success: function(result){
                            chart.updateSeries([{
                            name: '',
                            type:'line',
                            data: result
                    }]);
                }});
        });
    });

            $(document).ready(function(){
            $("#Monthly").click(function(){
                $.ajax({url: '../../../api/reportapi/MonthlyIncome', success: function(result){
                            chart.updateSeries([{
                            name: '',
                            data: result
                    }]);
                }});
        });
    });

</script>

